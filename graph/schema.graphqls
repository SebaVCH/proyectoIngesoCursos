type Curso {
  courseID: Int!
  instructorName: String!
  title: String!
  description: String!
  price: Float!
  category: String!
  imageURL: String!
}

extend type Query {
  cursos: [Curso!]!
  curso(courseID: ID!): Curso
  cursoByID(courseID: ID!): Curso
}

extend type Mutation {
  createCurso(title: String!, description: String!, price: Float!, category: String!, imageURL: String!, instructorName: String!): Curso!
  deleteCursoByID(courseID: Int!): String!
  updateCursoByID(courseID: Int!, title: String!, description: String!, price: Float!, category: String!, imageURL: String!): Curso!
}